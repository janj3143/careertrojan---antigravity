# ============================================================================
# CareerTrojan — Environment Configuration Template
# Updated: 2026-02-09
# ============================================================================
# Copy this to .env and fill in your keys:
#   cp .env.example .env
# ============================================================================

# ── Application ────────────────────────────────────────────────────────────
PROJECT_NAME=CareerTrojan
BRAND_NAME=CaReerTroJan
VERSION=2.1.0
ENV=development
DEBUG=True

# ── Paths (Windows — adjust for Ubuntu, see .env.ubuntu) ──────────────────
AI_DATA_PATH=L:/VS ai_data final - version/ai_data_final
AI_DATA_ROOT=L:/VS ai_data final - version/ai_data_final
USER_DATA_PATH=L:/VS ai_data final - version/USER DATA
ML_MODELS_PATH=E:/CareerTrojan/backend/ml/trained
TRAINING_DATA_PATH=L:/VS ai_data final - version/ai_data_final

# ── Database ───────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/careertrojan

# ── Redis ──────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ── Security / JWT ─────────────────────────────────────────────────────────
SECRET_KEY=change-this-use-openssl-rand-hex-32
CT_JWT_SECRET=change-this-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ── AI / LLM API Keys ─────────────────────────────────────────────────────
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
CLAUDE_API_KEY=
PERPLEXITY_API_KEY=
GEMINI_API_KEY=

# ── Search / Intelligence ─────────────────────────────────────────────────
SERPAPI_KEY=
BING_SEARCH_API_KEY=
GOOGLE_CUSTOM_SEARCH_API_KEY=
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=
GOOGLE_CLOUD_API_KEY=

# ── Contact Enrichment ─────────────────────────────────────────────────────
HUNTER_API_KEY=
CLEARBIT_API_KEY=

# ── Geolocation / Commute ──────────────────────────────────────────────────
OPENCAGE_API_KEY=
GEO_API_KEY=
GOOGLE_MAPS_API_KEY=

# ── Braintree Payment Gateway (primary) ─────────────────────────────────────
BRAINTREE_ENVIRONMENT=sandbox
BRAINTREE_MERCHANT_ID=
BRAINTREE_PUBLIC_KEY=
BRAINTREE_PRIVATE_KEY=

# ── Stripe (deprecated — kept for reference) ────────────────────────────────
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# ── Email / Transactional ──────────────────────────────────────────────────
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@careertrojan.com
SENDGRID_API_KEY=
KLAVIYO_API_KEY=

# ── CRM / Marketing ───────────────────────────────────────────────────────
HUBSPOT_API_KEY=

# ── Supabase (auth/storage fallback) ──────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ── Dev Tools ──────────────────────────────────────────────────────────────
GITHUB_PAT=
POSTMAN_API_KEY=

# ── Model Management ──────────────────────────────────────────────────────
MODEL_REGISTRY_ENABLED=true
MODEL_HOT_RELOAD=true
MODEL_VERSION_FILE=backend/ml/trained/model_version.json

# ── Feature Flags ──────────────────────────────────────────────────────────
ENABLE_AI_ENRICHMENT=true
ENABLE_MASQUERADE=true
