# ===========================================================================
# CareerTrojan — Ubuntu .env Template
# ===========================================================================
# Copy to .env and fill in your API keys + paths:
#   cp .env.ubuntu .env
#   nano .env
# ===========================================================================

# ── Platform Paths (CRITICAL — set these first) ──────────────────────────
CAREERTROJAN_ROOT=/home/jan/careertrojan
CAREERTROJAN_DATA_ROOT=/mnt/ai-data
CAREERTROJAN_USER_DATA=/mnt/ai-data/USER DATA
CAREERTROJAN_USER_DATA_MIRROR=/mnt/backup-data/USER_DATA_COPY
INTELLICV_DATA_ROOT=/mnt/ai-data/ai_data_final

# ── Database & Cache ─────────────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:changeme_strong_password@localhost:5432/careertrojan
REDIS_URL=redis://localhost:6379/0
CAREERTROJAN_DB_URL=sqlite:////mnt/ai-data/ai_learning_table.db
SECRET_KEY=changeme-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ── Project Metadata ─────────────────────────────────────────────────────
PROJECT_NAME=IntelliCV
APP_NAME=CareerTrojan
VERSION=1.0.0
DEBUG=false

# ── AI / LLM Keys ───────────────────────────────────────────────────────
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GEMINI_API_KEY=your-google-gemini-key
PERPLEXITY_API_KEY=pplx-your-perplexity-key

# ── Search & Enrichment ─────────────────────────────────────────────────
SEARCH_API_KEY=your-search-api-key
SERPAPI_KEY=your-serpapi-key
BING_SEARCH_API_KEY=your-bing-key
HUNTER_API_KEY=your-hunter-key
CLEARBIT_API_KEY=your-clearbit-key
GOOGLE_CUSTOM_SEARCH_KEY=your-google-cse-key
GOOGLE_CUSTOM_SEARCH_CX=your-google-cse-cx

# ── Geolocation ──────────────────────────────────────────────────────────
GEO_API_KEY=your-geocage-key
OPENCAGE_API_KEY=your-opencage-key
GOOGLE_MAPS_API_KEY=your-google-maps-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-key

# ── Payments & Email ─────────────────────────────────────────────────────
STRIPE_API_KEY=sk_test_your-stripe-key
RESEND_API_KEY=re_your-resend-key
RESEND_FROM_EMAIL=your-email@domain.com
SENDGRID_API_KEY=SG.your-sendgrid-key
KLAVIYO_API_KEY=pk_your-klaviyo-key

# ── CRM / External ──────────────────────────────────────────────────────
HUBSPOT_API_KEY=your-hubspot-key

# ── Supabase (if used) ──────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ── Feature Flags ────────────────────────────────────────────────────────
ENABLE_AI_ENRICHMENT=true
ENABLE_MASQUERADE=false
